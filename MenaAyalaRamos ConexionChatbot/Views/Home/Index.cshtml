<main class="container mt-5">
    <h2 class="text-center mb-4">Hazle una pregunta al <strong>RAM ChatBot</strong></h2>

   <form method="post" class="d-flex justify-content-center mb-4">
    <input type="text" name="prompt" class="form-control me-2 w-50" placeholder="Escribe tu pregunta aquí" required />

        <select name="chatbot" class="form-select me-2 w-auto">
            @if (ViewBag.ChatbotSeleccionado == "Gemini")
            {
                <option value="Gemini" selected>Gemini</option>
            }
            else
            {
                <option value="Gemini">Gemini</option>
            }

            @if (ViewBag.ChatbotSeleccionado == "TogetherAI")
            {
                <option value="TogetherAI" selected>TogetherAI</option>
            }
            else
            {
                <option value="TogetherAI">TogetherAI</option>
            }
        </select>
    <button type="submit" class="btn btn-primary">Enviar</button>
</form>

    @if (!string.IsNullOrEmpty(ViewBag.Respuesta as string))
    {
        <div class="alert alert-info text-center">
            <h5>Respuesta del RAM Chatbot:</h5>
            <p>@ViewBag.Respuesta</p>
        </div>
    }
</main>

