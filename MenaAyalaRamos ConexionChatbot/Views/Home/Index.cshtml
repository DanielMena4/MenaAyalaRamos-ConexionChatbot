@{
    ViewData["Title"] = "Chatbot";
}

<h2>Hazle una pregunta al JosueDanielJorge</h2>

<form method="post">
    <input type="text" name="prompt" placeholder="Escribe tu pregunta aquí" style="width: 300px;" />
    <button type="submit">Enviar</button>
</form>

@if (!string.IsNullOrEmpty(ViewBag.Respuesta as string))
{
    <h3>Respuesta del Chatbot:</h3>
    <p>@ViewBag.Respuesta</p>
}
